<div class="shop-by-category-section page-width {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <h2 class="category-heading">Shop by Category</h2>
  <div class="category-list">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}">
        <div class="category-item">
          <img
            src="{{ block.settings.icon | image_url: width: 60 }}"
            alt="{{ block.settings.title }}"
            width="60"
            height="60"
            loading="lazy">
          <h3>{{ block.settings.title }}</h3>
        </div>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Shop by Category",
    "settings": [],
    "blocks": [
      {
        "type": "category",
        "name": "Category",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Category Icon"
          }, {
            "type": "text",
            "id": "title",
            "label": "Category Title",
            "default": "Boy Shirt"
          }, {
            "type": "url",
            "id": "link",
            "label": "Category Link",
            "default": "/collections/all"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Shop by Category",
        "category": "Custom"
      }
    ]
  }
{% endschema %}